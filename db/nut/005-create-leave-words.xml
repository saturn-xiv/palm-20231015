<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="20220522172334" author="jeremy.zheng" labels="create-leave-words">

        <createTable tableName="leave_words">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="lang" type="varchar(8)">
                <constraints nullable="false" />
            </column>
            <column name="ip" type="varchar(45)">
                <constraints nullable="false" />
            </column>
            <column name="body" type="text">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="datetime" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>
        <createIndex tableName="leave_words" indexName="idx_leave_words_ip">
            <column name="ip" />
        </createIndex>
        <createIndex tableName="leave_words" indexName="idx_leave_words_lang">
            <column name="lang" />
        </createIndex>

    </changeSet>

</databaseChangeLog>
