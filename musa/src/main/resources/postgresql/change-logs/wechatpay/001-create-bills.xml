<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="20230413173002" author="Jeremy Zheng" labels="create bill files">

        <createTable tableName="wechat_pay_trade_bills">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="app_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="bill_date" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="bill_type" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="tar_type" type="varchar(32)"/>
            <column name="created_at" type="datetime" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="wechat_pay_trade_bills" indexName="idx_wechat_pay_trade_bills" unique="true">
            <column name="app_id"/>
            <column name="bill_date"/>
            <column name="bill_type"/>
        </createIndex>
        <createIndex tableName="wechat_pay_trade_bills" indexName="idx_wechat_pay_trade_bills_app_id">
            <column name="app_id"/>
        </createIndex>
        <createIndex tableName="wechat_pay_trade_bills" indexName="idx_wechat_pay_trade_bills_bill_date">
            <column name="bill_date"/>
        </createIndex>
        <createIndex tableName="wechat_pay_trade_bills" indexName="idx_wechat_pay_trade_bills_bill_type">
            <column name="bill_type"/>
        </createIndex>

        <createTable tableName="wechat_pay_fund_flow_bills">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="app_id" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="bill_date" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="account_type" type="varchar(32)">
                <constraints nullable="false"/>
            </column>
            <column name="tar_type" type="varchar(32)"/>
            <column name="created_at" type="datetime" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="wechat_pay_fund_flow_bills" indexName="idx_wechat_pay_fund_flow_bills" unique="true">
            <column name="app_id"/>
            <column name="bill_date"/>
            <column name="account_type"/>
        </createIndex>
        <createIndex tableName="wechat_pay_fund_flow_bills" indexName="idx_wechat_pay_fund_flow_bills_app_id">
            <column name="app_id"/>
        </createIndex>
        <createIndex tableName="wechat_pay_fund_flow_bills" indexName="idx_wechat_pay_fund_flow_bills_bill_date">
            <column name="bill_date"/>
        </createIndex>
        <createIndex tableName="wechat_pay_fund_flow_bills" indexName="idx_wechat_pay_fund_flow_bills_account_type">
            <column name="account_type"/>
        </createIndex>

    </changeSet>

</databaseChangeLog>
