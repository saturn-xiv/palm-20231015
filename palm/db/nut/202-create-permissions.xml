<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:pro="http://www.liquibase.org/xml/ns/pro" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
    http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd ">

    <changeSet id="20220925122052" author="jeremy.zheng" labels="create permissions">
        <createTable tableName="permissions">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="subject_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="subject_id" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="operation" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="resource_type" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="resource_id" type="integer" />
            <column name="created_at" type="datetime" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>
        <createIndex tableName="permissions" indexName="idx_permissions_subject_type">
            <column name="subject_type" />
        </createIndex>
        <createIndex tableName="permissions" indexName="idx_permissions_resource_type">
            <column name="resource_type" />
        </createIndex>
        <createIndex tableName="permissions" indexName="idx_permissions_operation">
            <column name="operation" />
        </createIndex>

    </changeSet>

</databaseChangeLog>
