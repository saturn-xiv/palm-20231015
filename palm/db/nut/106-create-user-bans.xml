<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd">

    <changeSet id="20230314123506" author="Jeremy Zheng" labels="create bans">
        <createTable tableName="user_bans">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="ip" type="varchar(45)">
                <constraints nullable="false" />
            </column>
            <column name="reason" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="expired_at" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="creator_id" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="datetime" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>
        <createIndex tableName="user_bans" indexName="idx_user_bans_ip">
            <column name="ip" />
        </createIndex>
    </changeSet>
</databaseChangeLog>
