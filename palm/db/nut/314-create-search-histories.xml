<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd
                        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.6.xsd">

    <changeSet id="20230417170550" author="Jeremy Zheng" labels="create search histories">

        <createTable tableName="search_histories">
            <column name="id" type="integer" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="user_id" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="keyword" type="varchar(63)">
                <constraints nullable="false" />
            </column>
            <column name="from" type="varchar(63)">
                <constraints nullable="false" />
            </column>
            <column name="created_at" type="datetime" defaultValueComputed="current_timestamp">
                <constraints nullable="false" />
            </column>
        </createTable>
        <createIndex tableName="search_histories" indexName="idx_search_histories_keyword">
            <column name="keyword" />
        </createIndex>
        <createIndex tableName="search_histories" indexName="idx_search_histories_from">
            <column name="from" />
        </createIndex>

    </changeSet>

</databaseChangeLog>
